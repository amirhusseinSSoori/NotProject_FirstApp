<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#be5858"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <RelativeLayout
        android:background="#be5858"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        >


        <io.supercharge.shimmerlayout.ShimmerLayout
            android:id="@+id/shimmer_text_for_2"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            app:shimmer_color="#f9a807"
            android:layout_centerHorizontal="true"
            app:shimmer_animation_duration="4000">
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"




                android:background="@drawable/draw"

                android:id="@+id/btn_add_draw"/>



        </io.supercharge.shimmerlayout.ShimmerLayout>


    </RelativeLayout>

        <GridView
            android:id="@+id/my_list_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="2"
            android:visibility="visible"></GridView>
    </LinearLayout>


</LinearLayout>